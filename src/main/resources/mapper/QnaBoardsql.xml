<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitnc4.mapper.QnaBoardMapper">
    <insert id="insertqna" parameterType="QnaBoardDto">
        insert into board_qna(category,subject,content,writer,writeday) values (#{category},#{subject},#{content},#{writer},now());
    </insert>

    <select id="searchIdOfinfo" parameterType="String" resultType="MemberDto">
            select u.user_name, u.email, u.phone
            from board_qna q join member u on q.writer=u.id
            LIMIT 1
    </select>

   <select id="qnaList" parameterType="String" resultType="QnaBoardDto">
      select * from board_qna where writer=#{writer}
    </select>
</mapper>